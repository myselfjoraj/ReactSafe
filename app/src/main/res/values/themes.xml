<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.ReactSafe" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:statusBarColor">@color/white</item>
        <!-- Customize your theme here. -->

        <item name="android:navigationBarColor">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowLightNavigationBar">true</item>
    </style>

    <style name="Theme.ReactSafeAlert" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:statusBarColor">@color/red_light</item>
        <!-- Customize your theme here. -->

        <item name="android:navigationBarColor">@color/red_light</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowLightNavigationBar">true</item>
    </style>

    <style name="Theme.ReactSafeSnooze" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:statusBarColor">@color/teal_700</item>
        <!-- Customize your theme here. -->

        <item name="android:navigationBarColor">@color/teal_700</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowLightNavigationBar">true</item>
    </style>

</resources>